<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ── Permissions ── -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- Camera: required for RX image analysis + preview -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Torch / Flashlight: required for TX signal transmission -->
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <!-- Keep CPU alive during long transmissions -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Optional: IMU access for motion-compensation (bonus feature) -->
    <uses-permission android:name="android.permission.BODY_SENSORS" />

    <!-- Foreground service + notifications -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- ── Hardware features ── -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="true" />

    <!-- Gyroscope / accelerometer for IMU motion compensation (optional) -->
    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="UFlash"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UFlash"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FIX: moved inside <application> (was incorrectly placed outside) -->
        <service
            android:name=".UFlashNotifService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!--
            Catches PREV / SEND / NEXT broadcasts from the notification
            buttons even when the app is in the background.
            exported="false" — only our own app can send these intents.
            FIX: moved inside <application> (was incorrectly placed outside)
        -->
        <receiver
            android:name=".NotifActionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.uflash.app.ACTION_PREV" />
                <action android:name="com.uflash.app.ACTION_SEND" />
                <action android:name="com.uflash.app.ACTION_NEXT" />
            </intent-filter>
        </receiver>

    </application>

</manifest>